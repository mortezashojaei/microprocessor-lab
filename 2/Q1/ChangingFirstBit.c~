#include <mega16.h>
static unsigned int time_count; 
interrupt [TIM0_OVF] void timer0_ovf_isr(void) 
{
    TCNT0 = 31; 
    ++time_count; 
    if (time_count == 3333)
  {
        PORTC.0 = (PORTC.0 ^ 1); 
        time_count = 0; 
     }
}
